    pub treasury: SystemAccount<'info>,
    pub platform_owner: SystemAccount<'info>,
    pub mint: Account<'info, Mint>,
    pub kyc_authority: SystemAccount<'info>,
    
    pub system_program: Program<'info, System>,
    pub token_program: Program<'info, Token>,
}

#[derive(Accounts)]
pub struct CreateMilestone<'info> {
    #[account(mut)]
    pub authority: Signer<'info>,
    
    #[account(
        mut,
        has_one = authority,
        seeds = [b"payout_config", authority.key().as_ref()],
        bump = payout_config.bump
    )]
    pub payout_config: Account<'info, PayoutConfig>,
    
    #[account(
        init,
        payer = authority,
        space = 8 + Milestone::INIT_SPACE,
        seeds = [
            b"milestone",
            payout_config.key().as_ref(),
            contributor.key().as_ref(),
            &[milestone_number]
        ],
        bump
    )]
    pub milestone: Account<'info, Milestone>,
    
    pub contributor: SystemAccount<'info>,
    pub verifier: SystemAccount<'info>,
    
    pub system_program: Program<'info, System>,
}

